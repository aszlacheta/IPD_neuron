<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="Import equation">
            <VBox.margin>
                <Insets left="15.0" top="10.0" />
            </VBox.margin>
        </Label>
        <HBox prefWidth="300">
            <children>
                <Button onAction="#importEquation5x3" text="Import equation 5x3">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Button>
                <Button onAction="#importEquation5x5" text="Import equation 5x5" />
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin>
        </HBox>
        <Label text="Equation and calculated factors">
            <VBox.margin>
                <Insets left="15.0" top="10.0" />
            </VBox.margin>
        </Label>
        <HBox prefWidth="300">
            <children>
                <VBox>
                    <children>
                        <Label text="Equation">
                            <VBox.margin>
                                <Insets bottom="5.0" left="10.0" top="5.0" />
                            </VBox.margin>
                        </Label>
                        <GridPane fx:id="equationsPane" hgap="10" vgap="10">
                            <VBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </VBox.margin>
                        </GridPane>
                    </children>
                </VBox>

                <VBox prefWidth="200">
                    <children>
                        <Label text="Calculated equations value">
                            <VBox.margin>
                                <Insets bottom="5.0" left="10.0" top="5.0" />
                            </VBox.margin>
                        </Label>
                        <GridPane fx:id="calculatedValues" hgap="10" vgap="10">
                            <VBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </VBox.margin>
                        </GridPane>
                    </children>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
                </VBox>

                <VBox prefWidth="200">
                    <children>
                        <Label text="Factors value">
                            <VBox.margin>
                                <Insets bottom="5.0" left="10.0" top="5.0" />
                            </VBox.margin>
                        </Label>
                        <GridPane fx:id="factorsContainer" hgap="10" vgap="10">
                            <VBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </VBox.margin>
                        </GridPane>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</fx:root>
