<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox prefWidth="300">
            <children>
                <Label text="Imported letter representation">
                    <VBox.margin>
                        <Insets bottom="10.0" left="15.0" top="10.0"/>
                    </VBox.margin>
                </Label>
                <GridPane fx:id="letterGrid" hgap="2" vgap="2">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0"/>
                    </VBox.margin>
                </GridPane>
            </children>

            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="5.0"/>
            </VBox.margin>
        </VBox>

        <VBox prefWidth="150">
            <children>
                <Label text="Import another letter">
                    <VBox.margin>
                        <Insets bottom="10.0" left="15.0" top="10.0"/>
                    </VBox.margin>
                </Label>
                <ComboBox fx:id="selectLetter" prefWidth="150.0">
                    <VBox.margin>
                        <Insets bottom="10.0" left="15.0" top="10.0"/>
                    </VBox.margin>
                </ComboBox>

                <Label text="The greatest similarity">
                    <VBox.margin>
                        <Insets bottom="10.0" left="15.0" top="10.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="greatestSimilarity" text="-">
                    <VBox.margin>
                        <Insets bottom="10.0" left="15.0" top="10.0"/>
                    </VBox.margin>
                </Label>
            </children>

            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="5.0"/>
            </VBox.margin>
        </VBox>

        <VBox prefWidth="200">
            <children>
                <Label text="Probability of recognition">
                    <VBox.margin>
                        <Insets bottom="10.0" left="15.0" top="10.0"/>
                    </VBox.margin>
                </Label>
                <ScrollPane>
                    <content>
                        <VBox>
                            <children>
                                <GridPane fx:id="probabilityGrid" hgap="10" vgap="5">
                                    <VBox.margin>
                                        <Insets left="10.0" right="10.0"/>
                                    </VBox.margin>
                                </GridPane>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>

            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="5.0"/>
            </VBox.margin>
        </VBox>
    </children>
</fx:root>
